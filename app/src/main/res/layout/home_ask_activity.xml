<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.HomeAskActivity">


    <TextView
        android:id="@+id/home_ask_cancel_tx"
        android:textColor="@color/color_1"
        android:text="@string/home_ask_cancel"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/home_ask_title_size"
        android:layout_margin="@dimen/home_ask_title_margin_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/home_ask_commit_tx"
        android:textColor="@color/color_1"
        android:text="@string/home_ask_commit"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/home_ask_title_size"
        android:layout_margin="@dimen/home_ask_title_margin_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/home_ask_content_title_et"
        android:hint="主题"
        android:textColor="@color/color_1"
        android:lineHeight="@dimen/home_ask_content_line_height"
        android:maxLines="1"
        android:layout_margin="@dimen/home_ask_title_margin_parent"
        android:layout_below="@id/home_ask_cancel_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/home_ask_content_et"
        android:hint="添加描述"
        android:textColor="@color/color_1"
        android:maxLines="1"
        android:layout_margin="@dimen/home_ask_title_margin_parent"
        android:layout_below="@id/home_ask_content_title_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>