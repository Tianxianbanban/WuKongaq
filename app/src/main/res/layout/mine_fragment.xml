<?xml version="1.0" encoding="utf-8"?>
<com.cy.develop.wukongaq.BounceScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/mine_top_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="match_parent"
            android:background="@color/background_2"
            android:layout_height="@dimen/mine_menu_module_Margin"
            android:contentDescription="@string/todo_1" />
        <include
            layout="@layout/mine_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />
        <ImageView
            android:layout_width="match_parent"
            android:background="@color/background_2"
            android:layout_height="@dimen/mine_menu_module_Margin"
            android:contentDescription="@string/todo_2" />

        <include
            layout="@layout/mine_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</com.cy.develop.wukongaq.BounceScrollView>